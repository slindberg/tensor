{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": [ 2, 2 ],
    "semi": [ 2, "never" ],
    "comma-dangle": [ 2, "always-multiline" ],
    "quotes": [ 2, "single", "avoid-escape" ],
    "no-cond-assign": [ 2, "always" ],
    "block-scoped-var": 2,
    "no-undef": 2,
    "no-redeclare": 2,
    "no-unused-vars": 2,
    "strict": [ 2 , "never" ],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  },
  "plugins": [
    "react"
  ]
}
